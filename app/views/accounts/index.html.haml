%h1 Listing accounts
%table
  %thead
    %tr
      %th Username
      %th Firstname
      %th Lastname
      %th Email
      %th Comments
      %th
      %th
      %th
  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.username
        %td= account.firstname
        %td= account.lastname
        %td= account.email
        %td= account.comments
        %td= link_to 'Show', account
        %td= link_to 'Edit', edit_account_path(account)
        %td= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Account', new_account_path
