%head
  %title Simulated
  = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
  = javascript_include_tag "application", "data-turbolinks-track" => true
  = csrf_meta_tags
-if @results[:errors]
  .lotterycalc
    = @results[:errors]
- else
  %table.table.table-condensed.table-bordered
    %tr.table-data-header
      %th Player
      %th Position
      %th Salary
      %th Next Game
      %th FPPG
      %th Next Opp
    - @results[:list].each do |p|
      %tr
        %td= p.name
        %td= p.pos
        %td= p.salary
        %td= p.fixture
        %td= p.fppg
        %td= p.next_opp
    %tr
      - 2.times do
        %td
      %td
        Total: #{@results[:salary]}
      %td
      %td
        Total: #{@results[:fppg]}