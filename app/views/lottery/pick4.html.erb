<%= form_tag('/lottery/pick4results') do %>
    <div class="lotterylabels">
      Select the number of balls drawn, then select the end date to stop playing:
    </div>
    <%= radio_button_tag(:pick, '4', :checked => true) %>
    <%= label_tag(:pick_4, '4 Ball Draw') %>
    <%= radio_button_tag(:pick, '3') %>
    <%= label_tag(:pick_3, '3 Ball Draw') %>
    </br>
    </br>
    <div class="lotterylabels">
      Click the calendar to select the end date:
    </div>
    <%= text_field_tag(:pickdate, nil, :class => 'datepicker',:readonly => true) %>
    <%= hidden_field_tag(:recorded) %>
    </br>
    </br>
    <%= submit_tag 'Generate your daily number(s)!', class: 'btn btn-primary' %>

<% end -%>